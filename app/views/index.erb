<section id="basket-counter">
  <%= @basket_count %> item(s) in basket
  <% if @basket_count > 0 %>
    <a href="/basket">View your basket</a>
  <% end %>
</section>

<section id="page-title">
  Products
</section>

<section id="product-catalogue">
  <ul id='products'>
    <% @products.each do |product| %>
      <li>
        <p> Product: <%= product.name %> (<%= product.colour %>)</p>
        <p> Price: <s><%= product.formatted_previous_price %></s> <%= product.formatted_price %> </p>
        <p> Category: <%= product.gender %> <%= product.category %> </p>
        <p>
          <% if product.stockroom_count > 0 %>
            <form action="/buy" method="POST">
              <button type="submit"  name="product_id" value="<%= product.id %>">BUY</button>
            </form>
          <% else %>
            <h2>Item out of stock</h2>
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>
</section>
